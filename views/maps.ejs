<body>

  <div class='sidebar pad2'>Listing</div>
  <div id='map' class='map pad2'>Map</div>

  <!--==================-->

  <div class='sidebar'>
    <div class='heading'>
      <h1>Our locations</h1>
    </div>
    <div id='listings' class='listings'>

      <%= console.log(features) %>

    <% for (i = 0; i < features.length; i++) { %>

      <ul class="listing">
        <li>
          <a class =" title item" href="#"><%= features[i].properties.who %></a>
          <%= features[i].properties.message %>
        </li>
      </ul>

    <% } %>

    </div>
  </div>




<script src="maps.js"></script>
</body>
</html>
